{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ctra0024/FIT3179/main/data/fatal_accidents.csv"
  },
  "width": 900,
  "height": 400,
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "accident_type_desc",
      "type": "nominal",
      "title": "Accident Type",
      "axis": {"titleFontSize": 14, "labelFontSize": 12}
    },
    "x": {
      "aggregate": "count",
      "field": "accident_date",
      "type": "quantitative",
      "stack": "normalize",
      "axis": {
        "format": "%",
        "titleFontSize": 14,
        "labelFontSize": 13,
        "gridColor": "darkgray"
      },
      "title": "Normalised % of All Accidents Between 2014 and 2019"
    },
    "tooltip": [
      {
      "field": "accident_date",
      "aggregate": "count",
      "title": "Number of Accidents"
      }
    ],
    "color": {
      "field": "road_user_type_desc",
      "type": "nominal",
      "condition": {
        "selection": "hover",
        "field": "road_user_type_desc",
        "type": "nominal",
        "legend": null
      },
      "scale": {
        "domain": [
          "Bicyclists",
          "Drivers",
          "Motorcyclists",
          "Passengers",
          "Pedestrians",
          "Pillion Passengers"
        ],
        "range": [
          "#B64E4E",
          "#DA7C18",
          "#803C09",
          "#7C0101",
          "#DFB708",
          "#260303"
        ]
      },
      "title": "Victim Road User Type",
      "legend": {
        "orient": "top",
        "titleFontSize": 14,
        "labelFontSize": 13,
        "symbolSize": 250
      }
    },
    "opacity": {"condition": {"selection": "hover", "value": 1}, "value": 0.2}
  },
  "selection": {
    "hover": {
      "type": "single",
      "on": "mouseover",
      "empty": "all",
      "fields": ["road_user_type_desc"]
    }
  },
  "config": {
    "background": "#f2f2f2",
    "style": {"cell": {"stroke": "transparent"}}
  }
}
