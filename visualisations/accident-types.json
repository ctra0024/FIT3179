{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ctra0024/FIT3179/main/data/fatal_accidents.csv"
  },
  "width": 650,
  "height": 400,
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "accident_type_desc",
      "type": "nominal",
      "title": "Accident Type",
      "axis": {"titleFontSize": 13, "labelFontSize": 12}
    },
    "x": {
      "aggregate": "count",
      "field": "accident_date",
      "type": "quantitative",
      "stack": "normalize",
      "axis": {"format": "%", "titleFontSize": 13, "labelFontSize": 13},
      "title": "Normalised % of All Accidents Between 2014 and 2019"
    },
    "color": {
      "field": "road_user_type_desc",
      "type": "nominal",
      "scale": {
        "domain": [
          "Bicyclists",
          "Drivers",
          "Motorcyclists",
          "Passengers",
          "Pedestrians",
          "Pillion Passengers"
        ],
        "range": [
          "#ed5353",
          "#cc7614",
          "#800020",
          "#9c1a1a",
          "#f5ce20",
          "#402121"
        ]
      },
      "title": "Victim Road User Type",
      "legend": {"orient": "top", "titleFontSize": 13, "labelFontSize": 13}
    }
  },
  "config": {"background": "#f2f2f2"}
}
