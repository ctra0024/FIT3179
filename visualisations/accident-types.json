{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ctra0024/FIT3179/main/data/fatal_accidents.csv"
  },
  "width": 650,
  "height": 400,
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "accident_type_desc",
      "type": "nominal",
      "title": "Accident Type",
      "axis": {
        "titleFontSize": 14,
        "labelFontSize": 12,
        "labelColor": "aliceblue",
        "titleColor": "aliceblue"
      }
    },
    "x": {
      "aggregate": "count",
      "field": "accident_date",
      "type": "quantitative",
      "stack": "normalize",
      "axis": {
        "format": "%",
        "titleFontSize": 14,
        "labelFontSize": 13,
        "labelColor": "aliceblue",
        "titleColor": "aliceblue",
        "gridColor": "darkgray"
      },
      "title": "Normalised % of All Accidents Between 2014 and 2019"
    },
    "tooltip": {
      "field": "accident_date",
      "aggregate": "count",
      "title": "Count of Accidents"
    },
    "color": {
      "field": "road_user_type_desc",
      "type": "nominal",
      "condition": {
        "selection": "hover",
        "field": "road_user_type_desc",
        "type": "nominal",
        "legend": null
      },
      "scale": {
        "domain": [
          "Bicyclists",
          "Drivers",
          "Motorcyclists",
          "Passengers",
          "Pedestrians",
          "Pillion Passengers"
        ],
        "range": [
          "#ed5353",
          "#cc7614",
          "#800020",
          "#4f070c",
          "#f5ce20",
          "white"
        ]
      },
      "title": "Victim Road User Type",
      "legend": {
        "orient": "top",
        "titleFontSize": 14,
        "labelFontSize": 13,
        "labelColor": "aliceblue",
        "titleColor": "aliceblue",
        "symbolSize": 250
      }
    },
    "opacity": {"condition": {"selection": "hover", "value": 1}, "value": 0.2}
  },
  "selection": {
    "hover": {
      "type": "single",
      "on": "mouseover",
      "empty": "all",
      "fields": ["road_user_type_desc"]
    }
  },
  "config": {
    "background": "#211f1f",
    "style": {"cell": {"stroke": "transparent"}}
  }
}